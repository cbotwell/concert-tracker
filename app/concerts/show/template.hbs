<button{{action 'saveConcert' model.concert on='click'}}>{{fa-icon "plus"}}</button>
<button>{{model.concert.rsvps}}</button>

{{#if model.concert.ticketUrl}}
<a href="{{model.concert.ticketUrl}}">Buy Tickets</a>
{{/if}}

<h2>{{model.concert.date}}</h2>

<h3>{{model.concert.venue.name}}</h3>
<p>
    {{model.concert.venue.address}} {{model.concert.venue.city}}, {{model.concert.venue.state}} {{model.concert.venue.zipcode}}
</p>

{{#each model.concert.bands as |band|}}
<img src="{{band.imageUrl}}" alt="{{band.name}}">
<h3>{{band.name}}</h3>

{{#if band.url}}
<a href="{{band.url}}">{{fa-icon "link"}}</a>
{{/if}}
{{#if band.facebookUrl}}
<a href="{{band.facebookUrl}}">{{fa-icon "facebook"}}</a>
{{/if}}
{{#if band.twitterUrl}}
<a href="{{band.twitterUrl}}">{{fa-icon "twitter"}}</a>
{{/if}}
{{#if band.instagramUrl}}
<a href="{{band.instagramUrl}}">{{fa-icon "instagram"}}</a>
{{/if}}

{{#if band.description}}
<p>{{band.description}}</p>
{{/if}}
{{#if band.genre}}
<p>Genre: {{band.genre}}</p>
{{/if}}
{{#if band.forFansOf}}
<p>For Fans of: {{band.forFansOf}}</p>
{{/if}}
{{/each}}
{{outlet}}
