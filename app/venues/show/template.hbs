<div class="large-card">
    <div class="left">
        <div class="logo">
            <img src="{{model.imageUrl}}" alt="{{model.name}}">
        </div>

        <h3>{{model.name}}</h3>

        <a href="{{model.url}}">{{fa-icon "link"}}</a>
        {{#if model.facebookUrl}}
        <a href="{{model.facebookUrl}}">{{fa-icon "facebook"}}</a>
        {{/if}}
        {{#if model.twitterUrl}}
        <a href="{{model.twitterUrl}}">{{fa-icon "twitter"}}</a>
        {{/if}}
        {{#if model.instagramUrl}}
        <a href="{{model.instagramUrl}}">{{fa-icon "instagram"}}</a>
        {{/if}}

        <p>
            {{model.address}} {{model.city}}, {{model.state}} {{model.zipcode}}
        </p>
        <p>
            {{model.phoneNumber}}
        </p>
    </div>

    <div class="right">
        <h4>Upcoming Concerts</h4>
        <ul>
            {{#each model.concerts as |concert|}}
            <li class="concert">
            {{#link-to 'concerts.show' concert}}
                {{#each concert.bands as |band|}}
                <span>{{band.name}}</span>
                {{/each}}
                on {{concert.date}}
            {{/link-to}}
            </li>
            {{/each}}
        </ul>
    </div>
</div>
