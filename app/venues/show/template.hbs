<div class="large-card">
    <div class="left">
        <div class="logo">
            <img src="{{model.venue.imageUrl}}" alt="{{model.venue.name}}">
        </div>

        <h3>
            {{model.venue.name}}
            {{#if session.isAuthenticated}}
            {{venue-fav-button venue=model.venue user=session.currentUser onClick='toggleFav'}}
            {{/if}}
        </h3>

        <ul>
            <li>
                <a href="{{model.venue.url}}">{{fa-icon "link"}}</a>
            </li>
            {{#if model.venue.facebookUrl}}
            <li>
                <a href="{{model.venue.facebookUrl}}">{{fa-icon "facebook"}}</a>
            </li>
            {{/if}}
            {{#if model.venue.twitterUrl}}
            <li>
                <a href="{{model.venue.twitterUrl}}">{{fa-icon "twitter"}}</a>
            </li>
            {{/if}}
            {{#if model.venue.instagramUrl}}
            <li>
                <a href="{{model.venue.instagramUrl}}">{{fa-icon "instagram"}}</a>
            </li>
            {{/if}}
        </ul>

        <p>
            {{model.venue.address}} {{model.venue.city}}, {{model.venue.state}} {{model.venue.zipcode}}
        </p>
        <p>
            {{model.venue.phoneNumber}}
        </p>
    </div>

    <div class="right">
        <div class="venue-concerts">
            <h4>Upcoming Concerts</h4>
            {{venue-upcoming-concerts concerts=model.venue.concerts}}
        </div>
    </div>
</div>
